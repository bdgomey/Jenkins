pipeline {
    agent {
        docker {
            image 'maven:eclipse-temurin-11-alpine'
        }
    }


    stages {
        stage('Build Backend') {
            steps {
                sh 'echo "Building..."'
                sh 'ls'
                sh 'mvn clean install' // Example build command for a Maven project
            }
        }
        stage('Test Backend') {
            steps {
                sh 'echo "Running Tests..."'
                sh 'mvn test' // Example test command for a Maven project
            }
        }
        stage('Deploy Backend') {
            steps {
                sh 'aws s3 sync frontend/dist s3://bjgomes-bucket-sdet-backend'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed'
        }
        success {
            echo 'Pipeline succeeded'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
